#!/bin/sh
# Creation graph queue de message

# $Id$

source ../Common

RRDFILE=../data/$HOST.mailq.rrd

# Definitions
DEFS="DEF:ligne1=$RRDFILE:mailq:AVERAGE"

#-------------------------------------------
# Charge Machine (load average)
#-------------------------------------------
LEGENDE="# msg"
GRAPHFILE=$HOST.mailq

for VAR in $LISTE
do
    TITRE="Queue de message sur $VAR"
    GRAPH=$GRAPHDIR/$GRAPHFILE.$VAR.png
    START=e-$VAR
# Creation du graph
rrdtool graph $GRAPH -s $START $OPTIONS --title="$TITRE" -v "$LEGENDE" $DEFS \
AREA:ligne1#559FE2:"Queue de message \:" GPRINT:ligne1:LAST:"%8.0lf\n" \
GPRINT:ligne1:MIN:"Minimum\:%8.0lf" GPRINT:ligne1:AVERAGE:"Moyenne\:%8.0lf" GPRINT:ligne1:MAX:"Maximum\:%8.0lf\n" \
COMMENT:"$STR_DATE\c"
done

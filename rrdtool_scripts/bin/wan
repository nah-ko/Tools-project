#!/bin/sh
# Creation graph LAN, WAN et latence

# $Id$

export PATH=/usr/local/bin:/usr/bin:/bin:/sbin:/usr/sbin
export LANG=fr_FR@euro

HOST=`hostname`
LISTE="48h 12d 48d 576d"

LGDATE=`date +%s`

RRDFILE1=../data/$HOST.network.rrd
GRAPHDIR=/usr2/web/rrd/graphs
STR_DATE="Derniere mise a jour le `date +\"%A %d %B %Y a %T\"`"
COULEURS="-c BACK#000000 -c FONT#AAAAAA -c FRAME#FFFFFF -c CANVAS#000000"
OPTIONS="-w 576 -a PNG --alt-autoscale-max -l 0 $COULEURS"

# Definitions
DEFS="DEF:ligne3=$RRDFILE1:INppp0:AVERAGE  \
      DEF:ligne4=$RRDFILE1:OUTppp0:AVERAGE"

#----------------
# lien WAN
#----------------
LEGENDE="octets/sec"
GRAPHFILE=$HOST.network.WAN

for VAR in $LISTE
do
	TITRE="Debit internet"
	case $VAR in
		48h)
			GRAPH=$GRAPHDIR/$GRAPHFILE.hourly.png
			START=e-48h
			TITRE="$TITRE sur 48 h"
			;;
		12d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.daily.png
			START=e-12d
			TITRE="$TITRE sur 12 j"
			;;
		48d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.weekly.png
			START=e-48d
			TITRE="$TITRE sur 48 j"
			;;
		576d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.monthly.png
			START=e-576d
			TITRE="$TITRE sur 576 j"
			;;
	esac

# Creation du graph
rrdtool graph $GRAPH -s $START $OPTIONS --title="$TITRE" -v "$LEGENDE" $DEFS \
HRULE:64000#000DFF:"Limite download (512kbps) 64Ko/s\n"                      \
HRULE:16000#00FF11:"Limite upload (128kbps) 16Ko/s\n"                        \
LINE2:ligne3#FFF000:"In   \:"                                                \
GPRINT:ligne3:LAST:"Cur=%8.2lf%so/s"                                         \
GPRINT:ligne3:AVERAGE:"Moy=%8.2lf%so/s"                                      \
GPRINT:ligne3:MAX:"Max=%8.2lf%so/s\n"                                        \
LINE2:ligne4#FF0000:"Out  \:"                                                \
GPRINT:ligne4:LAST:"Cur=%8.2lf%so/s"                                         \
GPRINT:ligne4:AVERAGE:"Moy=%8.2lf%so/s"                                      \
GPRINT:ligne4:MAX:"Max=%8.2lf%so/s\n"                                        \
COMMENT:"$STR_DATE\c"
done

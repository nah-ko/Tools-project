#!/bin/sh
# Creation graph LAN

# $Id$

export PATH=/usr/local/bin:/usr/bin:/bin:/sbin:/usr/sbin
export LANG=fr_FR@euro

HOST=`hostname`
LISTE="48h 12d 48d 576d"

LGDATE=`date +%s`

RRDFILE1=../data/$HOST.network.rrd
GRAPHDIR=/usr2/web/rrd/graphs
STR_DATE="Derniere mise a jour le `date +\"%A %d %B %Y a %T\"`"
COULEURS="-c BACK#000000 -c FONT#AAAAAA -c FRAME#FFFFFF -c CANVAS#000000"
OPTIONS="-w 576 -a PNG --alt-autoscale-max -l 0 $COULEURS"

# Definitions
DEFS="DEF:ligne1=$RRDFILE1:INeth0:AVERAGE  \
      DEF:ligne2=$RRDFILE1:OUTeth0:AVERAGE"

#----------------
# lien LAN
#----------------
LEGENDE="octets/sec"
GRAPHFILE=$HOST.network.LAN

for VAR in $LISTE
do
	TITRE="Debit reseau"
	case $VAR in
		48h)
			GRAPH=$GRAPHDIR/$GRAPHFILE.hourly.png
			START=e-48h
			TITRE="$TITRE sur 48 h"
			;;
		12d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.daily.png
			START=e-12d
			TITRE="$TITRE sur 12 j"
			;;
		48d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.weekly.png
			START=e-48d
			TITRE="$TITRE sur 48 j"
			;;
		576d)
			GRAPH=$GRAPHDIR/$GRAPHFILE.monthly.png
			START=e-576d
			TITRE="$TITRE sur 576 j"
			;;
	esac

# Creation du graph
rrdtool graph $GRAPH -s $START $OPTIONS --title="$TITRE" -v "$LEGENDE" $DEFS \
HRULE:1250000#000DFF:"Limite des 10Mbps (1.25Mo/s)\n"                        \
LINE2:ligne1#FF4CFE:"In   \:"                                                \
GPRINT:ligne1:LAST:"Cur=%8.2lf%so/s"                                         \
GPRINT:ligne1:AVERAGE:"Moy=%8.2lf%so/s"                                      \
GPRINT:ligne1:MAX:"Max=%8.2lf%so/s\n"                                        \
LINE2:ligne2#7DD643:"Out  \:"                                                \
GPRINT:ligne2:LAST:"Cur=%8.2lf%so/s"                                         \
GPRINT:ligne2:AVERAGE:"Moy=%8.2lf%so/s"                                      \
GPRINT:ligne2:MAX:"Max=%8.2lf%so/s\n"                                        \
COMMENT:"$STR_DATE\c"
done

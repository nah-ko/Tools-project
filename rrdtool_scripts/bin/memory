#!/bin/sh
# Creation graph memoire

# $Id$

source ../Common

RRDFILE1=../data/$HOST.real.mem.rrd
RRDFILE2=../data/$HOST.swap.mem.rrd

# Definitions
DEFS="DEF:ligne1=$RRDFILE1:percent:AVERAGE DEF:ligne2=$RRDFILE2:percent:AVERAGE"

#-------------------------------------------
# Memoire
#-------------------------------------------
LEGENDE="% Full"
GRAPHFILE=$HOST.mem

for VAR in $LISTE
do
    TITRE="Usage memoire sur $VAR"
    GRAPH=$GRAPHDIR/$GRAPHFILE.$VAR.png
    START=e-$VAR

# Creation du graph
rrdtool graph $GRAPH -s $START $OPTIONS --title="$TITRE" -v "$LEGENDE" $DEFS \
LINE2:ligne1#00a000:"Memoire reelle \:" GPRINT:ligne1:LAST:"%8.0lf%%\n" \
LINE2:ligne2#ff0000:"Memoire swap   \:" GPRINT:ligne2:LAST:"%8.0lf%%\n" \
COMMENT:"$STR_DATE\c"
done
